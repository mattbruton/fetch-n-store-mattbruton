@{
    ViewBag.Title = "Home Page";
}

<div ng-controller="FormController">
    <form>
        <div class="container text-center">
            <div class="row">
                <div class="form-group col-sm-2 col-sm-offset-2">
                    <select id="select-http-methods" class="form-control" ng-model="httpMethod">
                        <option>GET</option>
                        <option>HEAD</option>
                    </select>
                    <small>
                        <label for="select-http-methods">HTTP Method</label>
                    </small>
                </div>

                <div class="form-group col-sm-4">
                    <input type="text" id="input-url" class="form-control" placeholder="URL" ng-model="url">
                </div>

                <div class="col-sm-2 text-center">
                    <button class="btn btn-primary col-sm-12" ng-click="fetch()">Fetch</button>
                </div>
            </div>
        </div>
    </form>

    <div class="container" ng-hide="responseList.length < 1">
        <table class="table">
            <thead>
                <tr>
                    <th>Status Code</th>
                    <th>URL</th>
                    <th>HTTP Method</th>
                    <th>Response Time</th>
                    <th>Time of Request</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="response in responseList">
                    <td>{{response.StatusCode}}</td>
                    <td>{{response.URL}}</td>
                    <td>{{response.HttpMethod}}</td>
                    <td>{{response.ResponseTimeLength}}</td>
                    <td>{{response.TimeOfRequest}}</td>
                    <td><button class="btn btn-primary btn-sm" ng-click="store(response)">Store</button></td>
                </tr>
            </tbody>
        </table>
    </div>
    <div ng-hide="savedResponses.length < 1">
        <h1 class="text-center">Information from Database</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Status Code</th>
                    <th>URL</th>
                    <th>HTTP Method</th>
                    <th>Response Time</th>
                    <th>Time of Request</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="response in savedResponses">
                    <td>{{response.StatusCode}}</td>
                    <td>{{response.URL}}</td>
                    <td>{{response.HttpMethod}}</td>
                    <td>{{response.ResponseTimeLength}}</td>
                    <td>{{response.TimeOfRequest}}</td>
                    <td><button class="btn btn-primary btn-sm" ng-click="delete(response.ResponseId)">Delete</button></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>